<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tbl_proverb_info">
  <resultMap id="BaseResultMap" type="com.i2shopping.i2work.operation.core.proverb.model.Proverb">
    <result column="PROVERB_ID" property="proverbId" jdbcType="INTEGER"/>
    <result column="PROVERB_CONTENT" property="proverbContent" jdbcType="VARCHAR"/>
  </resultMap>
  <insert id="insert" parameterType="com.i2shopping.i2work.operation.core.proverb.model.Proverb">insert into tbl_proverb_info (PROVERB_CONTENT) values (#{proverbContent:VARCHAR})</insert>
  <select id="selectProverbInfo" resultMap="BaseResultMap" parameterType="com.i2shopping.i2work.operation.core.proverb.model.Proverb">select * from tbl_proverb_info where PROVERB_ID = #{proverbId:INTEGER}</select>
  <!--查询名言列表 随机获取参数 -->
  <select id="selectProverbInfoByString" resultType="java.lang.String" parameterType="com.i2shopping.i2work.operation.core.proverb.model.Proverb">select tpi.PROVERB_ID from tbl_proverb_info tpi</select>
  <!-- 查询所有数据 -->
  <select id="selectProverbInfoLimit" resultMap="BaseResultMap" parameterType="com.i2shopping.i2work.operation.core.proverb.model.Proverb">select * from tbl_proverb_info 
    <if test="proverbId != null and proverbId != ''">and PROVERB_ID = #{proverbId:INTEGER}</if>  
    <if test="proverbContent != null and proverbContent != ''">and PROVERB_CONTENT = like concat('%', #{proverbContent:VARCHAR}, '%') PROVERB_CONTENT = #{proverbContent:VARCHAR}</if> GROUP BY PROVERB_ID ASC 
    <!--  limit #{startRow},#{pagesize}  
  -->
  </select>
  <!-- 查询总行数 -->
  <select id="selectProverbInfoCount" resultType="java.lang.Integer" parameterType="com.i2shopping.i2work.operation.core.proverb.model.Proverb">select count(*) from tbl_proverb_info 
    <!--  <isNotEmpty property="proverbId" prepend="and">
      PROVERB_ID = #{proverbId:INTEGER}
      </isNotEmpty>
      <isNotEmpty property="proverbContent" prepend="and">
      PROVERB_CONTENT = like concat('%', #{proverbContent:VARCHAR}, '%')
     PROVERB_CONTENT = #{proverbContent:VARCHAR} 
     </isNotEmpty>--> 
  </select>
  <update id="updateProverb">update tbl_proverb_info set PROVERB_CONTENT = #{proverbContent:VARCHAR} where PROVERB_ID = #{proverbId:INTEGER}</update>
  <select id="queryByid" resultMap="BaseResultMap" parameterType="java.lang.Integer">select * from tbl_proverb_info where PROVERB_ID = #{proverbId:INTEGER}</select>
  <delete id="delProverb" parameterType="java.lang.Integer">delete from tbl_proverb_info where PROVERB_ID = #{proverbId:INTEGER}</delete>
</mapper>
